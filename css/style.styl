black = #1E2022
white = #F5F4F4
lightBlue = #0091FD
darkBlue = #34679F
@font-face{ /*Fira Code font: https://github.com/tonsky/FiraCode*/
    font-family: 'Fira Code';
    src: url('../assets/fonts/firaCode/FiraCode-Regular.eot');
    src: url('../assets/fonts/firaCode/FiraCode-Regular.eot') format('embedded-opentype'),
         url('../assets/fonts/firaCode/FiraCode-Regular.woff2') format('woff2'),
         url('../assets/fonts/firaCode/FiraCode-Regular.woff') format('woff'),
         url('../assets/fonts/firaCode/FiraCode-Regular.ttf') format('truetype');
    font-weight: 400;
    font-style: normal;
}
*
    margin 0
    padding 0
    box-sizing border-box
body
    background-color black
    font-family 'Fira Code'
    font-feature-settings "calt" 1
    text-rendering optimizeLegibility
    color white
.container
    height 100vh
    width: 100%
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    .text-container
        .text
            font-size: 44px
            text-align: center
            letter-spacing: 4px
            text-shadow: 1px 1px 3px rgba(black,.3)
    .contact-info
        position absolute
        bottom 20px
        font-size: 14px
        a
            color lightBlue
            text-decoration: none
@media only screen and (max-width: 560px)
    .container
        .text-container
            .text
                font-size: 32px
        .contact-info
            font-size: 20px